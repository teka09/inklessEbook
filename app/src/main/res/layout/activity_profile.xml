<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    tools:context="com.devs.celtica.inkless.Users.Profile">

    <fragment
        android:name="com.devs.celtica.inkless.HeaderFrag"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="55dp"
        android:orientation="vertical"
        android:background="@color/WhiteTrans"
        android:gravity="center">



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/bg_insc_form"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/Black"/>




        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/font1"
            android:textColor="@color/BleuFonce"
            android:textSize="20sp"
            android:text="Oussama Celtica"/>
        <TextView
            android:id="@+id/profile_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:fontFamily="@font/font1"
            android:textColor="@color/BleuFonce"
            android:textSize="15sp"
            android:text="Oussama Celtica"/>


        <LinearLayout
            android:id="@+id/profile_stat"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:background="@drawable/profile_butt_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:layout_marginLeft="8dp"
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:text="@string/profile_statButt"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:src="@drawable/stat2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:background="@drawable/profile_butt_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:layout_marginLeft="8dp"
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:text="@string/profile_configButt"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:src="@drawable/config"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_uploadButt"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:background="@drawable/profile_butt_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:layout_marginLeft="8dp"
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:text="@string/profile_uploadButt"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:src="@drawable/upload"/>
        </LinearLayout>

    </LinearLayout>



    <!-- Bottom Menu -->
    <fragment
        android:name="com.devs.celtica.inkless.BottiomMenu"
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        />

</FrameLayout>
