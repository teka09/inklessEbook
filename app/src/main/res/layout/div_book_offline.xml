<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layoutDirection="rtl">
        <ImageView
            android:id="@+id/ImageBook"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/bg"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layoutDirection="rtl"
            android:orientation="vertical">
            <TextView
                android:id="@+id/div_book_offline_nom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:textColor="@color/BleuFonce"
                android:gravity="right"
                android:textSize="24sp"
                android:text="My Book 1"/>

            <TextView
                android:id="@+id/div_book_offline_nom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font1"
                android:layout_marginTop="-7dp"
                android:textColor="@color/BleuFonce"
                android:gravity="right"
                android:textSize="21sp"
                android:text="My Book 1"/>

            <LinearLayout
                android:id="@+id/profileBook_readButt_offline"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_butt3"
                android:layoutDirection="rtl"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/book_bleu"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:fontFamily="@font/font1"
                    android:textColor="@color/BleuFonce"
                    android:textSize="18sp"
                    android:text="@string/profileBook_read"/>

            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Gray"/>
</LinearLayout>